  <div class="card3" id="body-header3">
    

    

    <canvas id="myChart"></canvas>

  </div>

  <script>
    document.addEventListener('DOMContentLoaded', getDataAndRenderChart);

    async function getDataAndRenderChart() {
      try {
        const response = await fetch('/api/chart-data');
        const chartData = await response.json();
        console.log(chartData)

        renderChart(chartData.account);
      } catch (error) {
        console.error('Error fetching chart data:', error);
      }
    }

    function renderChart(chartData) {
      console.log(chartData)
      const ctx = document.getElementById('myChart').getContext('2d');
      const userCountChart = new Chart(ctx, {
        type: 'bar',
        data: {
          ...chartData,
        },
        options: {
          scales: {
            y: {
              beginAtZero: true
            }
          },
        }
      });
      userCountChart.resize(600, 400);
    }
  </script>
